@model ResearchesMVC.Models.ViewModel.OrderViewModel

@{
    //ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>طباعة الطلب</h3>
@if (TempData["error"] != null)
{
    <span class="text-danger">@TempData["error"]</span>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="ViewReport">
            <div class="form-group">
                <label class="control-label"> اختر الجهة:</label><br />
                @for (int i = 0; i < Model.ToSide.Count; i++)
                {
                    <input asp-for="ToSide[i].Value" type="hidden" class="form-control" />
                    <input asp-for="ToSide[i].Selected" type="checkbox" />
                    @Model.ToSide[i].Text <br />


                    @if (i == 3)
                    {
                        <input asp-for="OfficeAdmin" type="text" class="form-control" value="" />

                        <br />
                    }
                    @if (i == 4)
                    {
                        <input asp-for="OrgAdmin" type="text" class="form-control" value="" /> <br />
                    }
                    @if (i == 5)
                    {
                        <input asp-for="SectionAdmin" type="text" class="form-control" value="" />

                        <br />
                    }
                    @if (i == 6)
                    {
                        <input asp-for="SchoolAdmin" type="text" class="form-control" value="" />

                        <br />
                    }

                }
            </div>
            <div class="form-group">
                <input type="submit" value="طباعة" class="btn btn-primary" />
            </div>

          
        </form>
    </div>
</div>
